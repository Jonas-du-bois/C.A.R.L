{
  "name": "carl-bot",
  "version": "2.0.0",
  "description": "C.A.R.L. - Communication Assistant for Routing & Logistics",
  "main": "src/index.js",
  "directories": {
    "doc": "docs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development node --watch src/index.js",
    "test": "node --test tests/**/*.test.js",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:integration": "node --test tests/integration/**/*.test.js",
    "db:migrate": "node scripts/migrate-db.js",
    "db:migrate:dry": "node scripts/migrate-db.js --dry-run",
    "db:optimize": "node scripts/migrate-db.js --optimize",
    "docker:build": "docker build -t carl-bot:latest .",
    "docker:run": "docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jonas-du-bois/C.A.R.L.git"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "assistant",
    "ai",
    "openai"
  ],
  "author": "Jonas",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Jonas-du-bois/C.A.R.L/issues"
  },
  "homepage": "https://github.com/Jonas-du-bois/C.A.R.L#readme",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "cron": "^4.3.5",
    "dotenv": "^17.2.3",
    "googleapis": "^166.0.0",
    "openai": "^6.9.1",
    "p-queue": "^8.0.1",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
